{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "sourceMap": true,                  // ✅ 启用 Source Map 映射 .ts → .js
    "inlineSources": true,              // ✅ 提高调试体验
    "skipLibCheck": true    
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "scripts": {
  "start": "ts-node src/index.ts"
  }

}